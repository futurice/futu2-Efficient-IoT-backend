{
  "name": "futu_2-backend-server",
  "version": "0.0.1",
  "description": "Backend for handling communication between clients and sensors",
  "main": "futu_2-backend-server",
  "engines": {
    "node": "4.1.1"
  },
  "scripts": {
    "babel-build": "$(npm bin)/babel ./app -d dist ",
    "copytemplate": "cat app/views/index.ejs | $(npm bin)/n-pipe dist/views/index.ejs",
    "test": "npm run lint && NODE_ENV=test $(npm bin)/_mocha --compilers js:babel-core/register -- tests/*.js || exit 0",
    "test-watch": "$(npm bin)/nodemon --exec 'babel-node' -x 'NODE_ENV=test $(npm bin)/_mocha --compilers js:babel-core/register -- tests/*.js'",
    "clean": "$(npm bin)/n-clean dist",
    "jscs": "$(npm bin)/jscs app",
    "eslint": "$(npm bin)/eslint app",
    "lint": "npm run jscs && npm run eslint",
    "start": "$(npm bin)/nodemon --exec 'babel-node' ./app/bin/www",
    "watch": "npm run lint && npm start",
    "build": "npm run clean $$ mkdir dist && npm run babel-build && npm run copytemplate",
    "postinstall": "echo ----------> Postinstall build; npm run build",
    "serve": "node ./dist/bin/www"
  },
  "keywords": [
    "IoT",
    "indoor location"
  ],
  "license": "ISC",
  "dependencies": {
    "babel": "5.8.23",
    "body-parser": "^1.14.1",
    "debug": "^2.2.0",
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "morgan": "^1.6.1",
    "nodemon": "^1.8.1",
    "npm-build-tools": "^2.2.5",
    "rx": "^4.0.7",
    "serve-favicon": "^2.3.0",
    "socket.io": "^1.3.7"
  },
  "devDependencies": {
    "babel-core": "5.8.23",
    "bootstrap": "^3.3.5",
    "eslint": "^1.9.0",
    "jscs": "^2.5.1",
    "mocha": "^2.3.4",
    "should": "^7.1.1",
    "socket.io-client": "^1.3.7"
  }
}
